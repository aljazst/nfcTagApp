<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"> <!-- PRESSED -->
        <shape android:shape="rectangle">
            <solid android:color="@color/independance" />
            <corners android:radius="@dimen/spacing_20"/>
            <size
                android:width="@dimen/spacing_56"
                android:height="@dimen/spacing_56"/>
        </shape>
    </item>

    <item> <!-- NORMAL -->
        <shape android:shape="rectangle">
            <solid android:color="@color/oxford_blue_lighter" />
            <corners android:radius="@dimen/spacing_20"/>
            <size
                android:width="@dimen/spacing_56"
                android:height="@dimen/spacing_56"/>
        </shape>
    </item>


</selector>