<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivShortcutIcon"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginTop="@dimen/spacing_2"
        android:layout_marginStart="@dimen/spacing_10"
        android:layout_marginEnd="@dimen/spacing_10"
        android:padding="@dimen/spacing_18"
        android:background="@drawable/bg_button_circle_white"
        tools:src="@drawable/ic_creditcard"
        android:contentDescription="Image description."
        android:elevation="@dimen/spacing_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvShortcutTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_4"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ivShortcutIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Moji nakupid"
        />

</androidx.constraintlayout.widget.ConstraintLayout>